root = true

# Rules for all files
[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Go
[{go.mod,go.sum,go.sum,*.go}]
indent_style = tab
indent_size = 4

# Markdown
[*.{md,txt}]
trim_trailing_whitespace = false

# Javascript, TypeScript and YAML
[{.,}*.{[jt]s{,*},y{a,}ml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
